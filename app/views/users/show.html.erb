<% provide(:title, @user.name) %>

<div class="row">
    <aside class="col-md-4"> 
        <section class="user_info"> 
            <h1>
                <%= gravatar_for(@user) %> 
                <%= @user.name %><br>
                <%= @user.email %><br>
                <%= @user.phone_number %><br>
                <%= @user.address %>
                <%= image_tag(@user.image.url, alt: 'Image') if @user.image? %>
                
            </h1> 
            <h2><%= link_to "Edit profile", edit_user_path(current_user) %></h2>
        </section> 
    </aside> 
</div>