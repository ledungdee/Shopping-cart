<% provide(:title, 'Products') %>

<!DOCTYPE html>
<html>
   <body class="sub_page">

      <!-- product section -->
      <section class="product_section layout_padding">
         <div class="container">
            <div class="heading_container heading_center">
               <h2>
                  All <span>products</span>
               </h2>
            </div>
            <div class="row">
                <% @products.each do |product| %>
               <div class="col-sm-6 col-md-4 col-lg-3">
                  <div class="box">
                     <div class="option_container">
                        <div class="options">
                           <%= link_to "More details" ,product_path(product), class:"option1" %>                         
                        </div>
                     </div>
                     
                     <div class="img-box">
                     <% if product.images? %>
                        <%= image_tag product.images[0].url, class: "img-fluid" %>
                     <% else %>
                        <%= image_tag(src="https://www.pngkey.com/png/detail/365-3654131_cart-empty-image-your-cart-is-empty.png", class: "img-fluid") %>
                     <% end %>
                     </div>
                     <div class="detail-box">
                        <h5>
                           <%= product.name %>
                        </h5>
                     </div>
                     <div class="detail-box">
                        <h5>
                           Color: <%= product.color %>
                        </h5>
                     </div>
                     <div class="detail-box">
                        <h6>
                           $<%= product.price %>
                        </h6>
                     </div>
                  </div>
               </div>
               <% end %>
            </div>
         </div>
      </section>
      <!-- end product section -->
      <!-- jQery -->
      <script src="js/jquery-3.4.1.min.js"></script>
      <!-- popper js -->
      <script src="js/popper.min.js"></script>
      <!-- bootstrap js -->
      <script src="js/bootstrap.js"></script>
      <!-- custom js -->
      <script src="js/custom.js"></script>
   </body>
</html>
