<% provide(:title,'Order information') %>

<h2>Order information</h2>
<h2># Customer: <%= current_user.name %></h2>
<% @orders.each do |order| %>
    <h2><%= order.id %></h2>
    <%= @order_items = order.order_items %>
    <% @order_items.each do |order_item| %>
        <h2><%= order_item.product.name %></h2>
        <h2><%= order_item.product.price %></h2>
        <h2><%= order_item.quantity %></h2>
        <h2><%= order_item.size %></h2>
    <% end %>

<% end %>



