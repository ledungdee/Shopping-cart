<% provide(:title, @shop.name) %>
<!DOCTYPE html>

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <% if @shop.avatar? %>
                    <div class="cirle_custom">
                    <%= image_tag(@shop.avatar.url, width:"150px") %>
                    </div>
                <% else %>
                    <%= image_tag(src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg", class:"rounded-circle mt-5", width:"150px" )%>
                <% end %>
                <span class="font-weight-bold">
                    <h4><b><%= @shop.name %></b></h4>
                    <h6>Product:</h6>
                </span>            

            </div>
        </div>
        <div class="col-md-5 border-right">     
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <b><h1 class="text-right">
                        <%= @shop.name %>
                    </h1></b>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                    <h6>Description:</h6> 
                        <%= @shop.description %>
                    <br><br><br><br><br>
                </div>
                </div>
                
                <div class='mt-5 text-center'>
                    <% if current_shop?(@shop)%>
                        <%= link_to 'Edit shop', edit_shop_path(current_shop), class:"btn btn-primary" %>               
                        <%= link_to 'Add product',new_product_path, class:"btn btn-primary" %>
                        <%= link_to "Delete shop", @shop, data: {"turbo-method": :delete, turbo_confirm: "Delete your shop will be delete all product too, continues?" }, class:"btn btn-danger" %>
                    <% end %> 
                </div>

            </div>
        </div>

        <div class="col-md-4">

            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center experience">                   
                    <div class="d-flex justify-content-between align-items-center mb-3">
                    </div>
                </div>
                <h4 class="col-md-12">Owner information:</h4>
                <br>
                <div class="col-md-12"><h5 class="labels">Name:</h5>
                <%= @shop.user.name %>
                </div>
                <div class="col-md-12"><h5 class="labels">Phone:</h5>
                <%= @shop.user.phone_number %>
                </div>
                 <div class="col-md-12"><h5 class="labels">Address:</h5>
                <%= @shop.user.address %>
                </div>
                 <div class="col-md-12"><h5 class="labels">Email:</h5>
                <%= @shop.user.email %>
                </div>
            </div>
        </div>
    </div>
</div>

<html>

   <body class="sub_page">

      <!-- product section -->
      <section class="product_section layout_padding">
         <div class="container">
            <div class="heading_container heading_center">
               <h2>
                   <span>Products</span>
               </h2>
            </div>
            <div class="row">
                <% @products.each do |product| %>
               <div class="col-sm-6 col-md-4 col-lg-3">
                  <div class="box">
                     <div class="option_container">
                        <div class="options">
                            <%= link_to "More details" ,product_path(product), class:"option1" %>
                            <%= link_to "Add to cart" ,'#', class:"option1" %>    
                        </div>
                     </div>
                     <div class="img-box">
                        <% if product.images? %>
                        <%= image_tag product.images[0].url, class: "img-fluid" %>
                        <% end %>   
                     </div>
                     <div class="detail-box">
                        <h5>
                           <%= product.name %>
                        </h5>
                     </div>
                     <div class="detail-box">
                        <h6>    
                           <%= product.price %>
                        </h6>
                     </div>
                  </div>
               </div>
               <% end %>
               <% if current_shop?(@shop) %>
                <div class="col-sm-6 col-md-4 col-lg-3">
                  <div class="box">
                     <div class="option_container">
                        <div class="options">
                           <%= link_to "Create product" ,new_product_path, class:"option1" %>
                           <br>
                        </div>
                     </div>
                     <div class="img-box">
                      
                     </div>
                     <div class="detail-box">
                        <h5>
                          
                        </h5>
                     </div>
                     <div class="detail-box">
                        <h6>
                           
                        </h6>
                     </div>
                     <div class="detail-box">
                        <h6>
                           
                        </h6>
                     </div>
                     <div class="detail-box">
                        <h6>
                           
                        </h6>
                     </div>
                     
                  </div>
               </div>
               <% end %>
            </div>
         </div>
      </section>
      <!-- end product section -->
      <!-- jQery -->
      <script src="js/jquery-3.4.1.min.js"></script>
      <!-- popper js -->
      <script src="js/popper.min.js"></script>
      <!-- bootstrap js -->
      <script src="js/bootstrap.js"></script>
      <!-- custom js -->
      <script src="js/custom.js"></script>
   </body>
</html>
